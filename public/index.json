<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Custom Roast API</title>
</head>
<body>
  <h1>ðŸ”¥ Custom Roast API</h1>
  <p>Click the button to get a random roast!</p>
  <button onclick="getRoast()">Get Roast</button>
  <pre id="output"></pre>

  <script>
    async function getRoast() {
      const res = await fetch('/roast?name=Amn');
      const data = await res.json();
      document.getElementById('output').textContent = data.roast;
    }
  </script>
</body>
</html>
